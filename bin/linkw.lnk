# generic linkw.lnk file

# default if no format is defined and 16-bit module is found
system begin 286
    format dos
end

# default if no format is defined and 32-bit module is found
system begin 386
    option  osname='Windows NT character-mode'
    option  map
    libpath %AsmCDir%/lib
    library libc,kernel32,user32
    format  windows nt
    runtime console=4.0
end

# DOS 16-bit
system begin dos
#   option  osname='DOS 16-bit'
    libpath %AsmCDir%\lib
    library cl
    format  dos ^
end
system begin com
    option osname='DOS 16-bit .COM application'
    format dos com
end

system begin os2
    option osname='OS/2 16-bit'
    library os2.lib
    libpath %WATCOM%/lib286
    libpath %WATCOM%/lib286/os2
    format os2 ^
end

system begin os2v2
    option osname='OS/2 32-bit'
    libpath %WATCOM%/lib386
    libpath %WATCOM%/lib386/os2
    format os2 lx ^
end

# Windows 32- and 64-bit
system begin pe_con
#    option osname='Win32/64 console application'
    format windows pe ^
    runtime console=4.0
end
system begin pe_gui
#    option osname='Win32/64 GUI application'
    format windows pe ^
    runtime windows=4.0
end
system begin pe_dll
#    option osname='Win32/64 Dll'
    format windows pe dll ^
    runtime windows=4.0
end
